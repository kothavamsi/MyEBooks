@model MyEBooks.Models.Pager
@{
    int i = 0;
    string className = "";
}
@if (@Model.IsRenderable)
{
  <nav aria-label="Page navigation">
  <ul class="pagination pagination-sm">

        @if (@Model.IsFirstVisible)
        {
            <li>
              <a href="@Url.Action("index", new { page = "page", pageNo = 1 })" aria-label="Previous">
                 <span aria-hidden="true">&laquo;</span>
              </a>
            </li>
        }
        else
        {
             <li class="hidden">
                 <a href="@Url.Action("index", new { page = "page", pageNo = 1 })" aria-label="Previous">
                    <span aria-hidden="true">&laquo;</span>
                 </a>
             </li>
        }

        @if (@Model.IsPreviousEnabled)
        {
            <li class="visible-lg-inline visible-md-inline"><a href="@Url.Action("index", new { page = "page", pageNo = @Model.CurrentIndex - 1 })">← Previous</a></li>
            <li class=" visible-sm-inline visible-xs-inline">
                <a href="@Url.Action("index", new { page = "page", pageNo = @Model.CurrentIndex - 1 })">←</a>
            </li>
        }
        else
        {
             <li class="visible-lg-inline visible-md-inlinedisabled"><a href="#">← Previous</a></li>
             <li class=" visible-sm-inline visible-xs-inline disabled"><a href="#">←</a></li>
        }
    

        @for (i = @Model.StartIndex; i <= @Model.EndIndex; i++)
        {
            className = "";
            if (i == @Model.CurrentIndex)
            {
                className = "active";
            }
            <li class="@className">@Html.ActionLink(@i.ToString(), "index", new { page = "page", pageNo = @i })</li>
        }
        
        @if (@Model.IsNextEnabled)
        {
            <li class="visible-lg-inline visible-md-inline"><a href="@Url.Action("index", new { page = "page", pageNo = @Model.CurrentIndex + 1 })">Next →</a></li>
            <li class=" visible-sm-inline visible-xs-inline">
                <a href="@Url.Action("index", new { page = "page", pageNo = @Model.CurrentIndex + 1 })">→</a>
            </li>
        }
        else
        {
            <li class="visible-lg-inline disabled visible-md-inline"><a href="#">Next →</a></li>
            <li class=" visible-sm-inline visible-xs-inline disabled"><a href="#">→</a></li>
        }

        @if (@Model.IsLastVisible)
        {
             <li>
              <a href="@Url.Action("index", new { page = "page", pageNo = @Model.TotalPages })" aria-label="Next">
                 <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
        }
        else
        {
            <li class="hidden">
              <a href="@Url.Action("index", new { page = "page", pageNo = @Model.TotalPages })" aria-label="Next">
                 <span aria-hidden="true">&raquo;</span>
              </a>
            </li>
        }
  </ul>
</nav>
}